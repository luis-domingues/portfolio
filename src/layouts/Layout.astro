---
import "../styles/global.css"

interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        {
            Astro.site && (
                <link
                    rel="alternate"
                    type="application/rss+xml"
                    title="title of your site rss feed"
                    href={new URL("rss.xml", Astro.site).href}
                />
            )
        }
        <script is:inline async crossorigin="anonymous"></script>
        <link rel="icon" href="/favicon.ico" />
        <title>{title ? `${title} | Luís Paulo` : "Luís Paulo Domingues"}</title>
    </head>
    <body class="mx-auto max-w-[70ch] px-4 sm:px-6">
        <header class="flex flex-col items-start py-6 lg:flex-row lg:justify-between lg:items-center">
            <a href="/" class="flex flex-col">
                <h1 class="font-semibold">Luís Paulo Domingues</h1>
                <p class="text-xs">Engenheiro de Software</p>
            </a>
            <ul>
                <nav class="flex gap-4 mt-2 text-sm sm:text-base">
                    <li><a href="/articles" class="hover:underline">/ artigos</a></li>
                    <li><a href="/projects" class="hover:underline">/ projetos</a></li>
                </nav>
            </ul>
        </header>
        <main class="py-6">
            <slot />
        </main>
        <footer class="flex flex-col gap-2 py-6 text-sm sm:flex-row sm:justify-between sm:items-center">
            <a href="" class="hover:underline">source code</a>
            <span>built by luis</span>
        </footer>
    </body>

</html>
