---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title?: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		{Astro.site && (
			<link 
				rel="alternate"
				type="application/rss+xml" 
				title="title of your site rss feed"
				href={new URL('rss.xml', Astro.site).href}
			/>
		)}
		<script
			is:inline
			async
			crossorigin="anonymous">
		</script>
		<link rel="icon" href="/favicon.ico" />
		<title>{title}</title>
	</head>
	<body>
		<div class="min-h-screen bg-gray-50 text-gray-900 antialiased">
			<div class="mx-auto min-h-screen w-full max-w-2xl px-6 py-8 sm:px-8 md:py-12 lg:max-w-4xl">
				<Header />
				<slot />
				<Footer />
			</div>
		</div>
	</body>
</html>